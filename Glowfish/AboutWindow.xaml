<Window x:Class="Glowfish.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource windowStyle}" Height="300" Width="300" Background="Azure" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Image Source="/Glowfish;component/Images/fish-icon.ico" Opacity=".3"/>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="{x:Null}">
            <Label FontSize="40" FontWeight="ExtraLight"  HorizontalAlignment="Right">Glowfish</Label>
            <Label FontSize="18" HorizontalAlignment="Right">Programmer: Josh Graham</Label>
            <Label HorizontalAlignment="Right">2011</Label>
        </StackPanel>
    </Grid>
</Window>
